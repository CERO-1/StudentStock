<?xml version="1.0" encoding="utf-8"?><LinearLayout    android:orientation="vertical"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".activity.ComprasActivy"><LinearLayout    android:orientation="horizontal"    android:layout_width="match_parent"    android:layout_height="wrap_content">        <ImageView        android:id="@+id/back"        android:layout_width="60dp"        android:layout_height="50dp"        android:src="@drawable/regresa"            android:background="@color/soliddd"/>    <Button        android:id="@+id/ListadeReservas"        android:layout_width="match_parent"        android:layout_height="50dp"        android:background="@drawable/btnsignin_gradient"        android:text="Lista de objetos perdidos"        android:textColor="#FFFFFF" /></LinearLayout>    <TextView        android:layout_gravity="center"        android:id="@+id/solo"        android:layout_width="wrap_content"        android:fontFamily="@font/gitchgitch"        android:layout_marginTop="0dp"        android:text="@string/app_name"        android:textSize="20dp"        android:textStyle="bold"        android:textColor="@color/black"        android:layout_height="wrap_content" />    <TextView        android:layout_gravity="center"        android:id="@+id/textNCorreo"        android:layout_width="wrap_content"        android:fontFamily="@font/gitchgitch"        android:layout_marginTop="0dp"        android:text="@string/app_name"        android:textSize="10dp"        android:textStyle="bold"        android:layout_marginBottom="10dp"        android:textColor="@color/soliddd"        android:layout_height="wrap_content" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recyclerview"        android:layout_width="match_parent"        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView></LinearLayout>