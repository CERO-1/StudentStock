<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="50dp"

            android:src="@drawable/regresa"
            android:background="@color/soliddd"/>

        <Button
            android:id="@+id/ListadeReservas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btnsignin_gradient"
            android:text="Subir de Objeto Perdido"
            android:textColor="#FFFFFF" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imagensubir"
        android:scaleType="fitXY"
        android:src="@drawable/iconodeapp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:layout_marginTop="20dp"
            android:inputType="textAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/nombreedi"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/icon_person"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/icon_person"
            android:hint="Nombre "
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <AutoCompleteTextView
            android:inputType="textAutoComplete"
            android:id="@+id/coloredi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/icon_person"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/icon_person"
            android:hint="color "
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />
        <AutoCompleteTextView
            android:inputType="textAutoComplete"
            android:id="@+id/marcaedi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/icon_person"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/icon_person"
            android:hint="marca "
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />


        <AutoCompleteTextView
            android:inputType="textAutoComplete"
            android:id="@+id/descedi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/icon_person"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/icon_person"
            android:hint="Descripcion del lugar "
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />
            <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/btnsignup_gradient"
            android:text="Subir objeto perdido"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF" />
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_circular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ProgressBar>

    </LinearLayout>

</LinearLayout>


